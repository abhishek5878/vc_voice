{
  "version": 2,
  "builds": [
    { "src": "api/*.py", "use": "@vercel/python" },
    { "src": "static/**", "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/api/health", "destination": "/api/health.py" },
    { "source": "/api/intake", "destination": "/api/intake.py" },
    { "source": "/api/chat", "destination": "/api/chat.py" },
    { "source": "/api/leads", "destination": "/api/leads.py" },
    { "source": "/", "destination": "/static/index.html" },
    { "source": "/styles.css", "destination": "/static/styles.css" },
    { "source": "/app.js", "destination": "/static/app.js" },
    { "source": "/(.*)", "destination": "/static/$1" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, X-API-Key" }
      ]
    }
  ]
}
